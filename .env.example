# ===================================
# Antigravity-Alpha Configuration Template
# ===================================
# Copy this file to .env and fill in your values

# LLM Provider Selection: "openai" or "gemini"
LLM_PROVIDER=openai

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o

# Google Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash

# ===================================
# Exchange API Keys (Optional - for private endpoints)
# ===================================

# Binance API (Optional - public endpoints work without keys)
BINANCE_API_KEY=
BINANCE_API_SECRET=

# Bybit API (Backup - Optional)
BYBIT_API_KEY=
BYBIT_API_SECRET=

# ===================================
# Discord Configuration
# ===================================

# Discord Webhook URL for reports
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# ===================================
# Database Configuration
# ===================================

# SQLite database path (default)
DATABASE_URL=sqlite:///./data/antigravity.db

# ===================================
# System Settings
# ===================================

# Number of top coins to analyze (default: 200)
TOP_COINS_COUNT=200

# Minimum score to include in report (default: 60)
MIN_REPORT_SCORE=60

# Report top N coins (default: 50)
REPORT_TOP_N=50

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
